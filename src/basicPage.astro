---
import { firebaseConfig, vapidKey } from '../public/firebaseConfig'

export interface Props {
	title: string
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="favicon.ico" />
    <link rel="manifest" href="site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script define:vars={{ firebaseConfig, vapidKey }}>
      // @ts-ignore APIKeys cannot be imported directly from public directory
      window.firebaseConfig = firebaseConfig; window.vapidKey = vapidKey
    </script>    
  </head>
  <body class="flex flex-col gap-3 bg-slate-700 text-slate-300 font-sans p-3">
    <slot/>
  </body>
</html>
